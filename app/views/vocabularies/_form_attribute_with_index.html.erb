<li class="field-wrapper"> 
  <div class="row <%= single_value_field ? '' : 'multi-value-controls' %>">
    <% if form.object.blacklisted_language_properties.include?(attribute) %>
      <div class="col-sm-12">
        <% if value.respond_to?(:rdf_label) %>
          <input type="text" class="form-control" <%= form.object.non_editable_fields.include?(attribute) ? "disabled='disabled'" : "" %> value="<%= MaybeURI.new(value.rdf_label.first).value %>" name="<%= "vocabulary[#{attribute.to_s}][]" %>"/>
        <% else %>
          <input type="text" class="form-control" <%= form.object.non_editable_fields.include?(attribute) ? "disabled='disabled'" : "" %> value="<%= MaybeURI.new(value).value %>" name="<%= "vocabulary[#{attribute.to_s}][]" %>"/>
        <% end %>
      </div>
    <% else %>
      <% if value.respond_to?(:rdf_label) %>
        <div class="col-sm-9">
          <input type="text" class="form-control" <%= form.object.non_editable_fields.include?(attribute) ? "disabled='disabled'" : "" %> value="<%= value.rdf_label.first %>" name="<%= "vocabulary[#{attribute.to_s}][]" %>"/>
        </div>
      <% else %>
        <div class="col-sm-9">
          <input type="text" class="form-control" <%= form.object.non_editable_fields.include?(attribute) ? "disabled='disabled'" : "" %> value="<%= value %>" name="<%= "vocabulary[#{attribute.to_s}][]" %>"/>
        </div>
      <% end %>

      <div class="col-sm-3">
        <%= render "vocabularies/language_select", :form => form, :attribute => attribute, :index => index %>
      </div>
    <% end %>
  </div>
</li>
